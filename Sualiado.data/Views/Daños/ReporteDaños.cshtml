<div class="row">
    <div class="col-md-6">
        <h1 class="page-header">Daños o perdidas</h1>
    </div>
</div><!--/.row-->
<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="pull-right panel-settings panel-button-tab-right">
            <li class="dropdown">
                <a class="pull-right dropdown-toggle" data-toggle="dropdown" href="#">
                    <em class="flaticon-technical-support"></em>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <ul class="dropdown-settings">
                            <li>
                                <a class="tablinks btn" id="repo" value="Ver Reportes" onclick="MostrarTodo()">
                                    <em class=""></em> Mostrar reportes
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a class="tablinks btn" id="repo2" style="display:none;" onclick="Ocultar()">
                                    <em class="fa fa-cog"></em> Ocultar reportes
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>
        </ul>
        <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="flaticon-up-and-down"></em></span>
    </div>
    <div class="panel-body">

        <div class="fixed-table-container" id="tablas">
            <div id="descripcion"></div>
            <table id="mitabla" class="table table-responsive-lg">
                <thead class="border-bottom">
                    <tr>
                        <th>Imagen</th>
                        <th>Referencia</th>
                        <th>Nombre</th>
                        <th>Opciones</th>
                    </tr>

                </thead>
                <tbody id="ProductosParaReportar">
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal" id="reporte">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title">Reportar un daño</h1>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="report" overflow:auto;">

                <div class="form-group">
                    <label for="refe">Referencia:</label>
                    <input type="text" class="form-control" id="referencia" readonly />
                </div>
                <label for="id">Tipo de daño:</label>
                <div class="form-group">
                    <Select class="custom-select form-control" id="menuDaño">
                    </Select>
                </div>
                <div class="form-group">
                    <label for="cant">Cantidad dañada:</label>
                    <input type="number" class="form-control" id="cant" />
                </div>
                <div class="form-group">
                    <label for="id">Observacion:</label>
                    <textarea class="form-control" placeholder="Una breve explicacion de lo que le ha pasado al producto" id="obs"></textarea>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">

                <button class="btn btn-primary " onclick="Reportar()" value="1">Reportar</button>

            </div>

        </div>
    </div>
</div>
