<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Reportes</h1>
    </div>
</div><!--/.row-->
<div class="panel panel-widget">
    <div class="panel-heading">
        <a class="tablinks btn" onclick="MostrarGrafica(event,'Ventas')">
            <em class="flaticon-stats"></em> Graficas
        </a>
        <a class="tablinks btn" onclick="MostrarCambios(event,'Cambios')">
            <em class="flaticon-report"></em> Cambios
        </a>
        <a class="tablinks btn" onclick="MostrarReporte(event,'Productos')">
            <em class="flaticon-alarm"></em> Productos
        </a>
        <span class="pull-right clickable panel-toggle panel-button-tab-left"><em class="flaticon-up-and-down"></em></span>
    </div>
    <div class="panel-body">
        <div id="Ventas" class="tabcontent" style="display:none;">
            <input type="hidden" id="grafica" value="1" />

            <div class="row">
                <div id="masVendido">

                </div>
                <div id="ventas">

                </div>

            </div>
        </div>
        <div id="Productos" class="tabcontent" style="display:none;">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            Productos agotados
                        </div>
                        <div class="panel-body">
                            <ul class="todo-list" id="agotados">
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-orange" style="background-color:orange;">
                        <div class="panel-heading">
                            Productos por agotar
                        </div>
                        <div class="panel-body">
                            <ul class="todo-list" id="agotar">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" id="rep" value="1" />
        </div>

        <div id="Cambios" class="tabcontent" style="display:none;">
            <div class=fixed-table-container>
                <table id="procam" class="table table-responsive-lg">
                    <thead class="border-bottom">
                        <tr>
                            <th>Fecha</th>
                            <th>Producto</th>
                            <th>Precio anterior</th>
                            <th>Precio actual</th>
                            <th>Persona</th>
                        </tr>
                    </thead>
                    <tbody id="preciosCambiados">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<input id="can" value="reportes" type="hidden" />

